<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
                            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

  <beans profile="dev,wc-all-stubs,wc-hsa-stub,testability-api">
    <bean id="hsaServiceStub" class="se.inera.intyg.infra.integration.hsa.stub.HsaServiceStub"/>
  </beans>

  <beans profile="dev,wc-all-stubs,wc-hsa-stub">

    <jaxws:endpoint address="/hsa-authorization" implementor="se.inera.intyg.infra.integration.hsa.stub.GetAuthorizationsForPersonResponderStub"/>
    <jaxws:endpoint address="/hsa-employee" implementor="se.inera.intyg.infra.integration.hsa.stub.GetEmployeeResponderStub"/>
    <jaxws:endpoint address="/hsa-healthcareunit" implementor="se.inera.intyg.infra.integration.hsa.stub.GetHealthCareUnitResponderStub"/>
    <jaxws:endpoint address="/hsa-healthcareunit-members" implementor="se.inera.intyg.infra.integration.hsa.stub.GetHealthCareUnitMembersResponderStub"/>
    <jaxws:endpoint address="/hsa-unit" implementor="se.inera.intyg.infra.integration.hsa.stub.GetUnitResponderStub"/>

    <bean id="bootstrapBean" class="se.inera.intyg.infra.integration.hsa.stub.BootstrapBean"/>
  </beans>

  <beans profile="dev,testability-api">
    <jaxrs:server address="/hsa-api">
      <jaxrs:serviceBeans>
        <ref bean="hsaStubRestApi"/>
      </jaxrs:serviceBeans>
      <jaxrs:providers>
        <ref bean="jacksonJsonProvider"/>
      </jaxrs:providers>
      <jaxrs:extensionMappings>
        <entry key="json" value="application/json"/>
      </jaxrs:extensionMappings>
    </jaxrs:server>

    <bean id="hsaStubRestApi" class="se.inera.intyg.infra.integration.hsa.stub.HsaStubRestApi"/>
  </beans>

</beans>
